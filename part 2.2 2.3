import React from 'react';

// Header component to display the course name
const Header = ({ name }) => {
  return <h1>{name}</h1>;
};

// Part component to display individual parts with exercises
const Part = ({ part }) => {
  return (
    <p>
      {part.name}: {part.exercises} exercises
    </p>
  );
};

// Content component to render all parts of the course
const Content = ({ parts }) => {
  return (
    <div>
      {parts.map((part) => (
        <Part key={part.id} part={part} />
      ))}
    </div>
  );
};

// Total component to display the sum of exercises
const Total = ({ totalExercises }) => {
  return <h3>Total exercises: {totalExercises}</h3>;
};

// Course component to bring everything together (course name, parts, and total exercises)
const Course = ({ course }) => {
  // Calculate the total exercises
  const totalExercises = course.parts.reduce((total, part) => total + part.exercises, 0);

  return (
    <div>
      <Header name={course.name} />
      <Content parts={course.parts} />
      <Total totalExercises={totalExercises} />
    </div>
  );
};

// Main App component
const App = () => {
  const course = {
    id: 1,
    name: 'Half Stack application development',
    parts: [
      {
        name: 'Fundamentals of React',
        exercises: 10,
        id: 1
      },
      {
        name: 'Using props to pass data',
        exercises: 7,
        id: 2
      },
      {
        name: 'State of a component',
        exercises: 14,
        id: 3
      }
    ]
  };

  return <Course course={course} />;
};

export default App;
